<% layout('layouts/boilerplate') -%>
<div class="container" id="editBody">
  <h1 id="page-title">Update Listing</h1>
  <form action="http://localhost:3000/listings/<%= listing._id %>?_method=PATCH" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="form-row row justify-content-evenly">
      <div class="col-md-4 mb-2">
        <label class="form-label" for="title">Title:</label>
        <input type="text" name="listing[title]" class="form-control" id="title" placeholder="Title" required value="<%= listing.title %>">
        <div class="invalid-feedback">
          Please enter Title of your Listing.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <div class="col-md-4 mb-2">
        <label class="form-label" for="price">Price:</label>
        <input type="number" class="form-control" name="listing[price]" id="price" placeholder="price" min="0" required value="<%= listing.price %>">
        <div class="invalid-feedback">
          Please enter price for your listing.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <div class="col-md-4 mb-2">
        <label class="form-label" for="country">Country:</label>
        <select name="listing[country]" id="country" class="form-control" required>
          <option selected value="<%= listing.country %>"><%= listing.country %></option>
          <%- include("../includes/countries.ejs") %>
        </select>
        <div class="invalid-feedback">
          Please provide a valid country.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="col-xs-12 col-sm-12 mb-4 col-md-8">
        <label class="form-label" for="image">Upload New Image:</label>
        <input type="file" class="form-control" name="listing[image]" id="image" placeholder="image url" value="<%= listing.image %>">
      </div>

      <div class="col-xs-12 col-sm-12 mb-3 col-md-4">
        <label class="form-label" for="location">Location:</label>
        <input type="text" class="form-control" name="listing[location]" id="location" placeholder="location" required value="<%= listing.location %>">
        <div class="invalid-feedback">
          Please provide a valid location.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="col-xs-12 col-sm-12 mb-4 col-md-7">
        <label class="form-label" for="description">Description:</label>
        <textarea type="text" name="listing[description]" class="form-control" id="description" placeholder="Description" required style="height: 150px;"><%= listing.description %></textarea>
        <div class="invalid-feedback">
          Please enter description for your Listing.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <!-- <div style="display: flex; flex-direction: column;"> -->
        <div class="previewImage" >
          Original Image: <br>
          <img src="<%= imageLink %>" alt="" style="height: 150px; width: 200px;">
        </div>
        <div id="buttons">
          <div class="col align-self-start">
            <button style="height: 40px; margin: 20px; margin-left: 0;" type="submit" class="btn btn-success">Update Listing</button>
          </div>
          <div class="col align-self-start">
            <button style="height: 40px; margin: 20px;" type="button" class="btn btn-secondary" onclick="goBack()">Cancel</button>
          </div>
        </div>
      <!-- </div> -->
    </div>
  </form>
</div>

