<% if (listingSuccess && listingSuccess.length) { %>
    <div class="alert alert-success d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg style="height: 2em; width : 2em" class="bi flex-shrink-0 me-2" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
        <div>
            <%= listingSuccess %>
        </div>  
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
    </div>     
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg style="height: 2em; width : 2em" class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <div>
            <%= error %>
        </div>  
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
    </div>     
<% } %>